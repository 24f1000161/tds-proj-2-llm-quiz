# Quiz Solver Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# Student Secrets (comma-separated email:secret pairs)
# Example: student1@example.com:secret1,student2@example.com:secret2
STUDENT_SECRETS=

# ===========================================
# AI Pipe Configuration (Primary LLM)
# Get your token from https://aipipe.org/login
# ===========================================
AIPIPE_TOKEN=
AIPIPE_BASE_URL=https://aipipe.org/openai/v1
AIPIPE_MODEL=gpt-4o-mini

# ===========================================
# Gemini Configuration (Fallback LLM)
# Option 1: Use via AI Pipe (recommended)
#   - Set GEMINI_VIA_AIPIPE=true
#   - Uses your AIPIPE_TOKEN
# Option 2: Use direct Gemini API
#   - Set GEMINI_VIA_AIPIPE=false
#   - Get API key from https://aistudio.google.com/app/apikey
# ===========================================
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.0-flash
GEMINI_VIA_AIPIPE=true

# Timing Configuration
QUIZ_DEADLINE_SECONDS=180

# Browser Configuration
BROWSER_HEADLESS=true
